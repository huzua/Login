<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main"
    tools:context="com.example.administrator.demo.LoginActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        />

    <LinearLayout
        android:id="@+id/Login_LinearLayout_Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        >
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shape_login_linear"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名："
                android:textSize="16sp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/et_username"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:hint="填写用户名"
            android:textCursorDrawable="@null"
            android:inputType="number"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_register_et"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        >
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shape_login_linear"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textSize="16sp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/et_password"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:hint=""
            android:textCursorDrawable="@null"
            android:inputType="number"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_register_et"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="50dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            >

            <TextView
                android:id="@+id/Login_TextView_Send"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="登录"
                android:textSize="17sp"
                android:textColor="#000000"
                android:background="@drawable/shape_loginback"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/Login_TextView_back"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="返回"
                android:textSize="17sp"
                android:textColor="#000000v v v./,"
                android:background="@drawable/shape_loginback"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_weight="1.27" />
        </LinearLayout>
    </LinearLayout>

    <!--android:visibility="gone"-->
    <TextView
        android:id="@+id/Login_TextView_PhoneError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号不正确"
        android:textSize="12sp"
        android:textColor="#EA566C"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Login_LinearLayout_Phone"
        android:visibility="gone"
        />


</RelativeLayout>
